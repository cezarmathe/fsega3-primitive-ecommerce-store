# EditorConfig is awesome: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.js]
indent_size = 2
